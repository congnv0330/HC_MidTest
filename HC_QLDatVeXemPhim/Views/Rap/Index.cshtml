@model IEnumerable<HC_QLDatVeXemPhim.Entities.Rap>

@{
    ViewData["Title"] = "Danh Sách Phim";
}

    <h1>Danh Sách Phim</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenRap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoChoTrong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenRap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoChoTrong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaRap">Cập nhật</a> |
                <a asp-action="Details" asp-route-id="@item.MaRap">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.MaRap">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
