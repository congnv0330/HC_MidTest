@model HC_QLDatVeXemPhim.Entities.LichChieuPhim

@{
    ViewData["Title"] = "Tạo mới";
}

    <h1>Tạo mới</h1>

<h4>Lịch chiếu phim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaRap" class="control-label"></label>
                <select asp-for="MaRap" class ="form-control" asp-items="ViewBag.MaRap"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaPhim" class="control-label"></label>
                <select asp-for="MaPhim" class ="form-control" asp-items="ViewBag.MaPhim"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianChieu" class="control-label"></label>
                <input asp-for="ThoiGianChieu" class="form-control" />
                <span asp-validation-for="ThoiGianChieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
